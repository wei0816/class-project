@model IEnumerable<prjModelValidate.Models.tStudent>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.css">
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.js"></script>
<script>
    $(function () {
        $('#myTable').DataTable();
    });
</script>
@{
    ViewBag.Title = "學生列表";
}

<h2>學生列表</h2>

<p>
    @Html.ActionLink("學生新增", "Create")
</p>
@if (Model.Count() == 0)
{
    <p>無學生紀錄</p>
}
else
{
    <table id="myTable" class="display">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.fStuId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fEmail)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fScore)
                </th>
                <th></th>
            </tr>
            </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.fStuId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fScore)
                    </td>
                    <td>

                        @Html.ActionLink("  ", "Edit", new { id = item.fStuId },
                       new { @class = "glyphicon glyphicon-edit" })
                        @Html.ActionLink("  ", "Delete", new { id = item.fStuId },
                       new { @class = "glyphicon glyphicon-trash", onclick = "return confirm('確定刪除嗎?');" })
                    </td>
                </tr>
            }
        </tbody>
</table>
}

